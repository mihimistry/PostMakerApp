<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maxgen.postmakerapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar">
        <activity
            android:name=".activity.ProfileActivity"
            android:label="Profile"></activity>
        <activity android:name=".activity.RegistrationActivity" />

        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.TemplateListActivity"
            android:label="Select Template" />

        <activity
            android:name=".activity.ImageListActivity"
            android:label="Choose Image" />

        <activity
            android:name=".activity.Template2Activity"
            android:label="Post Template" />

        <activity
            android:name=".activity.Template1Activity"
            android:label="Post Template"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".activity.SelectPostTypeActivity">

        </activity>
        <activity
            android:name=".activity.CreatePostActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.MainActivity" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />
    </application>

</manifest>